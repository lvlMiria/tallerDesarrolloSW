
@{
    ViewData["Title"] = "Items";
}

<div class="card-body m-5" style="background-color:white; border-radius: 5px">
    <div class="container-fluid d-flex flex-column align-items-center">
        <div class="row">
            <h3>Items</h3>
        </div>
    </div>

    <div class="container-fluid d-flex flex-column justify-content-center" style="width:800px">
        @*Item*@
        <div class="row m-2">
            <label for="nombre_item" class="form-label">Item</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Nombre del item" aria-label="nombre_item">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2"><span class="material-icons">search</span></button>
            </div>
        </div>

        @*Concepto*@
        <div class="row m-2">
            <label for="cboConcepto" class="form-label">Concepto</label>
            <div class="input-group mb-3">
                <select class="form-select" aria-label="cboConcepto">
                    <option selected>Seleccionar</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>

        @*Gasto o inversión*@
        <div class="row m-2">
            <div class="col-4">
                <div class="card">
                    <div class="card-header">Tipo</div>
                    <div class="card-body">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rdbGastoInv" id="rdbGasto">
                            <label class="form-check-label" for="rdbGasto">
                                Gasto
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rdbGastoInv" id="rdbInversion">
                            <label class="form-check-label" for="rdbInversion">
                                Inversión
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Continuidad o nuevo*@
                <div class="card">
                    <div class="card-header">Clasificación</div>
                    <div class="card-body">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rdbContNuevo" id="rdbContinuidad">
                            <label class="form-check-label" for="rdbContinuidad">
                                Continuidad Operativa
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rdbContNuevo" id="rdbNuevo">
                            <label class="form-check-label" for="rdbNuevo">
                                Nuevo Proyecto
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            @*Estado*@
            <div class="col-4">
                <div class="card">
                    <div class="card-header">Estado</div>
                    <div class="card-body">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rdbEstado" id="rdbActivo">
                            <label class="form-check-label" for="rdbActivo">
                                Activo
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="rdbEstado" id="rdbInactivo">
                            <label class="form-check-label" for="rdbInactivo">
                                Inactivo
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
  
        
        @*Botones*@
        <div class="row" style="margin-top:40px">

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Index" asp-controller="Home">
                        <div class="d-grid gap-2">
                            <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Salir</button>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <div class="d-grid gap-2">
                        <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Nuevo</button>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <div class="d-grid gap-2">
                        <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Grabar</button>
                    </div>
                </div>
            </div>

        </div>

    </div>
    
</div>

