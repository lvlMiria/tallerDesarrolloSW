@{
    ViewData["Title"] = "Inicio";
}

<div class="card-body m-5" style="background-color:white; border-radius: 5px">
    <div class="container-fluid d-flex flex-column align-items-center">
        <div class="row">
            <h2>Sistema de Presupuestos TI</h2>
        </div>

        <div class="row m-2">
            <h5>Ingresar</h5>
        </div>
    </div>

    @*Botones ingresar*@
    <div class="container-fluid d-flex flex-column justify-content-center">
        <div class="row">

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Index" asp-controller="Items">
                    <div class="d-grid gap-2">
                        <button type="button" style="height:60px; background-color:forestgreen; color: white;" class="btn">Items</button>
                    </div>
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Index" asp-controller="Presupuestoes">
                    <div class="d-grid gap-2">
                        <button type="button" style="height: 60px; background-color: forestgreen; color: white;" class="btn">Presupuestos</button>
                    </div>
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Index" asp-controller="Facturas">
                    <div class="d-grid gap-2">
                        <button type="button" style="height: 60px; background-color: forestgreen; color: white;" class="btn">Facturas</button>
                    </div>
                    </a>
                </div>
            </div>

        </div>

    </div>
    @*Sub título 2*@
    <div class="container-fluid d-flex flex-column align-items-center">
        <div class="row m-2">
            <h5>Parámetros</h5>
        </div>
    </div>
    @*Botones parámetros*@
    <div class="container-fluid d-flex flex-column justify-content-center">

        <div class="row">

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Index" asp-controller="TipoCambios">
                    <div class="d-grid gap-2">
                        <button type="button" style="height: 60px; background-color: forestgreen; color: white;" class="btn">USD</button>
                    </div>
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Index" asp-controller="Ipcs">
                    <div class="d-grid gap-2">
                        <button type="button" style="height: 60px; background-color: forestgreen; color: white;" class="btn">IPC</button>
                    </div>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>