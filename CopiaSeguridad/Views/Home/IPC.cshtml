@{
    ViewData["Title"] = "Valor IPC";
}

<div class="card-body m-5" style="background-color:white; border-radius: 5px">
    <div class="container-fluid d-flex flex-column align-items-center">
        <div class="row">
            <h3>Valor IPC</h3>
        </div>
    </div>

    <div class="container-fluid d-flex flex-column align-items-center">
        <div class="card" style="width: 30rem;border-color:forestgreen">
            <div class="card-body">
                @*Valor*@
                <div class="row m-1">
                    <label for="txtValor" class="form-label">Valor</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" aria-label="txtValor">
                    </div>
                </div>
                @*año*@
                <div class="row m-1">
                    <label for="txtAnio" class="form-label">Año</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" aria-label="txtAnio">
                    </div>
                </div>
                @*Botones*@
                <div class="row" style="margin-top:40px">

                    <div class="col-12 col-md-4">
                        <div class="m-2">
                            <a asp-action="Index" asp-controller="Home">
                                <div class="d-grid gap-2">
                                    <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Salir</button>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="m-2">
                            <div class="d-grid gap-2">
                                <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Actualizar</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="m-2">
                            <div class="d-grid gap-2">
                                <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Ingresar</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="container-fluid d-flex flex-column align-items-center">
        @*Histórico*@
        <div class="row m-1">
            <p style="font-weight:bold">Histórico</p>
        </div>
        <div class="col">
            <p>2024: 3,9%</p>
            <p>2023: 9,8%</p>
            <p>2022: 4,3%</p>
        </div>
    </div>

</div>

