@using System.Globalization
@model IEnumerable<Presentacion.Models.Factura>

@{
    ViewData["Title"] = "Facturas";
}

<div class="card-body m-5" style="background-color:white; border-radius: 5px">
    <div class="d-flex flex-row-reverse">
        <a asp-action="ListaFacturas">
            Ver Lista <span class="material-icons">arrow_circle_right</span>
        </a>
    </div>
    <div class="container-fluid d-flex flex-column align-items-center">
        <div class="row">
            <h3>Facturas</h3>
        </div>
    </div>

    <div class="container-fluid d-flex flex-column justify-content-center">

        <div class="row m-1">
            @*Item*@
            <label for="cboItems" class="form-label">Item</label>
            <div class="input-group mb-3">
                <select class="form-select" aria-label="cboItems" id="cboItems">
                    <option selected>Seleccione un item</option>
                    @foreach (var item in ViewBag.Items)
                    {
                        <option value="@item.CodItem">@item.DescItem</option>
                    }
                </select>
            </div>
        </div>

        @*N°Factura*@
        <div class="row m-1">
            <label for="nFactura" class="form-label">N°Factura</label>
            <div class="input-group mb-3">
                <button class="btn btn-outline-secondary" type="button" id="btnAtras">
                    <span class="material-icons">arrow_back_ios</span>
                </button>
                <input id="nFactura" type="text" class="form-control" aria-label="nFactura" value="">
                <button class="btn btn-outline-secondary" type="button" id="btnAdelante">
                    <span class="material-icons">arrow_forward_ios</span>
                </button>
            </div>
        </div>

        @*Monto*@
        <div class="row m-1">
            <label for="txtMonto" class="form-label">Monto</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input id="txtMonto" type="text" class="form-control" aria-label="txtMonto" value="">
            </div>
        </div>

        <div class="row m-1">
            @*Empresa*@
            <label for="cboEmpresa" class="form-label">Empresa</label>
            <div class="input-group mb-3">
                <select class="form-select" aria-label="cboEmpresa" id="cboEmpresa">
                    <option value="One">One</option>
                    <option value="Two">Two</option>
                    <option value="Three">Three</option>
                </select>
            </div>
        </div>

        @section scripts {
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var cboItems = document.getElementById("cboItems");
                    var nFactura = document.getElementById("nFactura");
                    var facturas = [];

                    // Obtener los números de factura correspondientes al item seleccionado
                    cboItems.addEventListener("change", function () {
                        var itemSeleccionado = cboItems.value;
                        $.ajax({
                            url: '/Facturas/ObtenerFacturas',
                            type: 'GET',
                            data: { codItem: itemSeleccionado },
                            success: function (data) {
                                facturas = data;
                                if (facturas.length > 0) {
                                    nFactura.value = facturas[0];
                                } else {
                                    nFactura.value = "No hay facturas disponibles";
                                }
                            },
                        });
                        
                    });

                    // Adelante
                    document.getElementById("btnAdelante").addEventListener("click", function () {
                        if (facturas.length > 0) {
                            var indexActual = facturas.indexOf(nFactura.value);
                            var sigIndex = (indexActual + 1) % facturas.length;
                            nFactura.value = facturas[sigIndex];
                        }
                    });

                    // Atras
                    document.getElementById("btnAtras").addEventListener("click", function () {
                        if (facturas.length > 0) {
                            var indexActual = facturas.indexOf(nFactura.value);
                            var indexAnterior = (indexActual - 1 + facturas.length) % facturas.length;
                            nFactura.value = facturas[indexAnterior];
                        }
                    });
                });
            </script>
            
        }

        <div class="row m-3">
            <label for="dtRecepcion">Fecha de Recepción</label>
            <input id="dtRecepcion" class="form-control" type="date" @* value="@String.Format("{0:yyyy-MM-dd}",)" *@ />
        </div>

        <div class="row m-3">
            <label for="dtEntrega">Fecha de Entrega</label>
            <input id="dtEntrega" class="form-control" type="date" @* value="@String.Format("{0:yyyy-MM-dd}",)" *@ />
        </div>

        @*Mes y año contable*@
        <div class="row m-1">
            <div class="col-6">
                <label for="txtMes">Mes Contable</label>
                <div class="input-group mb-3">
                    <input id="txtMes" type="text" class="form-control" aria-label="txtMes" value="">
                </div>
            </div>
            <div class="col-6">
                <label for="txtAnio">Año Contable</label>
                <div class="input-group mb-3">
                    <input id="txtAnio" type="text" class="form-control" aria-label="txtAnio" value="">
                </div>
            </div>
        </div>

        @{
            //Cuando es SIT, separa y almacena el número
            var numSIT = "";
            // if (ViewBag.Control.Origen.StartsWith("sit"))
            // {
            //     var separarSIT = ViewBag.Control.Origen.Split("-");
            //     numSIT = separarSIT[1];
            //}
        }
        @*SIT o Contrato*@
        <div class="row m-2">
            <p>Origen</p>
            <div class="col-6">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rdbContratoSIT" id="rdbContrato" @* @(ViewBag.Control.Origen == "contrato" ? "checked" : "" *@)>
                    <label class="form-check-label" for="rdbContrato">
                        Contrato
                    </label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rdbContratoSIT" id="rdbSIT">
                    <label class="form-check-label" for="rdbSIT">
                        SIT
                    </label>
                </div>
                <div class="input-group mb-3">
                    <input id="txtSIT" type="text" class="form-control" aria-label="txtSIT" value="@numSIT">
                </div>
            </div>
        </div>

        @*Botones*@
        <div class="row" style="margin-top:40px">

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Index" asp-controller="Home">
                        <div class="d-grid gap-2">
                            <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Salir</button>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="m-2">
                   <a asp-action="Create">
                        <div class="d-grid gap-2">
                            <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Nueva</button>
                        </div>
                   </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="m-2">
                    <a asp-action="Edit">
                        <div class="d-grid gap-2">
                            <button type="button" style=" background-color: forestgreen; color: white;" class="btn">Editar</button>
                        </div>
                    </a>
                </div>
            </div>

        </div>

    </div>

</div>

